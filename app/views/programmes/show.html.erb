<div class='container'>
  <div class='row'>
    <div class='col-sm-3'>
      <h3><%= @programme.title %></h3>
    </div>

    <div class='col-sm-3'>
      <strong>Notes:</strong>
      <div class='panel'>
        <%= @programme.notes %>
      </div>
    </div>
    <div class='col-sm-2'>
      <a class="btn btn-default" id='loadProjectorWindow'>Open Projector Window</a>
    </div>
    <div class='col-sm-2'>
      <a class="btn btn-default" id='closeProjectorWindow'>Close Projector Window</a>
    </div>
    <div class='col-sm-2'>
      <a class="btn btn-default" id='goToBlack'>Blank Screen</a>
    </div>
  </div> <!-- /row -->

<!-- Main control area -->
  <div class='row'>
    <div class='col-sm-3' id='service_menu'>

      <strong>Songs:</strong>
      <% @programmeSongs.each do |pSong| %>
      <p class='song_scheduler'
         rel='<%= pSong.song_id %>'> <%= pSong.song.title %>
      </p>
      <% end %>
      <hr />

      <strong>Scriptures & Texts:</strong>
      <% @programmeScriptures.each do |pScripture| %>
      <p class='scripture_scheduler'
         rel='<%= pScripture.scripture_id %>'>
        <%= pScripture.scripture.title %>
      </p>
      <% end %>

    </div>

    <div class='col-sm-3'>
      <div class='panel' id='slides'>


      </div>
    </div>
    <div class='col-sm-3'>
      <div id="vidPreviewContainer">
        <div id="lyric_block">
        </div>
      </div>

<div class='row'>
        <label>Font Colour</label>
        <input type="text" id='font_color' />
</div>
<div class='row'>
        <label>Background Colour</label>
        <input type="text" id='projector_bg_color' />
</div>

    </div>

  </div> <!-- /row -->

  <div class='row'>
    <p>
      <strong>Media Resources:</strong>ToDo: add preview thumbs
      <div class='container-fluid'>
        <% @programme.resources.each do |resource| %>
        <div class="row">
          <%= resource.title %>
        </div>
        <% end %>
      </div>
    <p>
  </div>
  <strong>User:</strong>
  <%= @programme.user.email %>
</p>

<%= link_to 'Edit', edit_programme_path(@programme) %> |
<%= link_to 'Back', programmes_path %>
</div>
