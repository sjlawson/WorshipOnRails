<div class='container'>
<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>
<div class='panel'>
<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>License</th>
      <th>Author</th>
      <!-- <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.content[0..64] %></td>
        <td><%= song.license %></td>
        <td><%= song.author %></td>
        <!-- <td><%# song.user.email %></td> -->
        <td ><%= link_to 'Show', song, :class => 'btn btn-default btn-sm' %>
        <%= link_to 'Edit', edit_song_path(song), :class => 'btn btn-default btn-sm' %>
        <%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Song', new_song_path, :class => 'btn btn-default btn-sm' %>
</div>
