<div class='container'>
<p id="notice"><%= notice %></p>

<h1>Listing Resources</h1>
<div class='panel'>
<table class='table table-striped table-bordered' >
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Resource type</th>
      <th>Background</th>
      <th>Featured</th>
      <th>Attribution</th>
      <!-- <th>User</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.title %></td>
        <td><%= resource.location %></td>
        <td><%= resource.resourceType %></td>
        <td><%= resource.background ? 'Yes' : 'No' %> </td>
        <td><%= resource.featured ? 'Yes' : 'No' %></td>
        <td><%= resource.attribution %></td>
        <!-- <td><%# resource.user.email %></td> -->
        <td><%= link_to 'Show', resource, :class => 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource), :class => 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Resource', new_resource_path, :class => 'btn btn-default btn-sm' %>
</div>
