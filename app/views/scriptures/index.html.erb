<div class='container'>
<p id="notice"><%= notice %></p>

<h1>Listing Scriptures</h1>
<div class='panel'>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scriptures.each do |scripture| %>
      <tr>
        <td><%= scripture.title %></td>
        <td><%= scripture.content[0..64] %></td>
        <td><%= scripture.author %></td>
        <td><%= scripture.user.email %></td>
        <td><%= link_to 'Show', scripture %></td>
        <td><%= link_to 'Edit', edit_scripture_path(scripture) %></td>
        <td><%= link_to 'Destroy', scripture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Scripture', new_scripture_path %>
</div>
